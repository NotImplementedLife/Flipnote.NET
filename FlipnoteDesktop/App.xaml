<Application x:Class="FlipnoteDesktop.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:FlipnoteDesktop"
             Startup="Application_Startup">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/Styles/FocusVisual.xaml"/>
                <ResourceDictionary Source="/Styles/LayerSelector.xaml"/>
                <ResourceDictionary Source="/Styles/PaperColorSelector.xaml"/>
                <ResourceDictionary Source="/Styles/SimpleButtonStyle.xaml"/>
                <ResourceDictionary Source="/Styles/SimpleTextBoxStyle.xaml"/>
                <ResourceDictionary Source="/Styles/ExpansionToggleButtonStyle.xaml"/>
                <ResourceDictionary Source="/Styles/ToolTipStyle.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Application.Resources>
</Application>
