                    <GeometryGroup FillRule="Nonzero">
                        <RectangleGeometry Rect="13,2,6,15" RadiusX="3" RadiusY="1"/>
                        <RectangleGeometry Rect="6,14.5,20,2.7" RadiusX="1" RadiusY="1"/>
                        <PathGeometry Figures="M8 18 L24 18 Q23 24 29 28L10 28Q7 24 8 18"/>
                    </GeometryGroup>
                </Path.Data>
            </Path>
        </Canvas>
    </Viewbox>
</UserControl>
